@article{calonne_macroscopic_2015,
  title = {Macroscopic Modeling of Heat and Water Vapor Transfer with Phase Change in Dry Snow Based on an Upscaling Method: {{Influence}} of Air Convection: {{HEAT AND MASS TRANSFER WITH CONVECTION}}},
